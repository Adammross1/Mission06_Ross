@model Movie

<h1>Add Your Favorite Movies</h1>

<form method="post">
    <input type="hidden" asp-for="MovieId"/>

    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select><br /><br />

    <label asp-for="Title" id="">Title</label><br />
    <input asp-for="Title"/><br /><br />

    <label asp-for="Year" id="">Year</label><br />
    <input asp-for="Year"/><br /><br />

    <label asp-for="Director" id="">Director</label><br />
    <input asp-for="Director" /><br /><br />

    <label asp-for="Rating" id="">Rating</label><br />
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br /><br />

    <label asp-for="Edited" id="">Edited</label>
    <input asp-for="Edited" /><br /><br />

    <label asp-for="LentTo" id="">Lent to:</label><br />
    <input asp-for="LentTo" /><br /><br />

    <label asp-for="CopiedToPlex" id="">Copied to Plex</label><br />
    <input asp-for="CopiedToPlex" /><br /><br />

    <label asp-for="Notes" id="">Notes</label><br />
    <input asp-for="Notes" /><br /><br />'

    <button type="submit">Submit Movie</button>

    <div asp-validation-summary="All"></div>
</form>